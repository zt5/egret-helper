{
	"name": "egret-helper",
	"displayName": "Egret Helper",
	"description": "egret工具 支持调试，编译，管理资源，发布，创建",
	"version": "3.0.3",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Debuggers",
		"Extension Packs",
		"Other"
	],
	"icon": "images/icon.png",
	"keywords": [
		"egret"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"publisher": "zt5",
	"repository": "https://github.com/zt5/egret-helper",
	"contributes": {
		"commands": [
			{
				"command": "egret-helper.goToExml",
				"title": "使用Egret UI Editor打开",
				"icon": "./images/egret_ui_editor.png"
			},
			{
				"command": "egret-helper.egretRestart",
				"title": "重新运行egret服务器",
				"icon": "./images/icon.svg"
			},
			{
				"command": "egret-helper.egretRestartAndDebug",
				"title": "重新运行egret服务器并调试",
				"icon": "./images/icon.svg"
			},
			{
				"command": "egret-helper.egretBuild",
				"title": "重新编译项目",
				"icon": "./images/icon.svg"
			},
			{
				"command": "egret-helper.egretBuildAndDebug",
				"title": "重新编译项目并调试",
				"icon": "./images/icon.svg"
			},
			{
				"command": "egret-helper.egretResSync",
				"title": "同步default.res.json",
				"icon": "./images/icon.svg"
			},
			{
				"command": "egret-helper.createProject",
				"title": "调出Egret Launcher的创建项目页面",
				"icon": "./images/icon.svg"
			},
			{
				"command": "egret-helper-launcher.publish",
				"title": "调出Egret Launcher的发布项目页面",
				"icon": "./images/icon.svg"
			},
			{
				"command": "egret-helper.egretBuildEngine",
				"title": "编译引擎",
				"icon": "./images/icon.svg"
			},
			{
				"command": "egret-helper.showEgretMenu",
				"title": "调出egret服务菜单",
				"icon": "./images/icon.svg"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "egret-helper.goToExml",
					"when": "resourceFilename =~ /.*\\.exml/",
					"group": "navigation"
				}
			],
			"editor/context": [
				{
					"command": "egret-helper.goToExml",
					"when": "resourceFilename =~ /.*\\.exml/",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"command": "egret-helper.goToExml",
					"when": "resourceFilename =~ /.*\\.exml/",
					"group": "navigation"
				}
			],
			"editor/title/context": [
				{
					"command": "egret-helper.goToExml",
					"when": "resourceFilename =~ /.*\\.exml/",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Egret Helper",
			"properties": {
				"egret-helper.enable": {
					"type": "boolean",
					"default": true,
					"description": "插件是否可用"
				},
				"egret-helper.devlog": {
					"type": "boolean",
					"default": false,
					"description": "是否打印详细日志"
				},
				"egret-helper.alertErrorWin": {
					"type": "boolean",
					"default": false,
					"description": "是否弹出错误弹窗"
				},
				"egret-helper.egretResourceJsonPath": {
					"type": "string",
					"default": "resource/default.res.json",
					"description": "egret资源配置default.res.json的路径(相对于项目根目录)"
				},
				"egret-helper.egretResourcePath": {
					"type": "string",
					"default": "resource",
					"description": "egret同步资源文件夹路径(要添加或删除到default.res.json的文件夹,相对于项目根目录)"
				},
				"egret-helper.resMapIgnore": {
					"type": "array",
					"uniqueItems": true,
					"items": {
						"type": "string"
					},
					"default": [
						"default.res.json",
						"default.thm.json",
						".exml"
					],
					"description": "同步default.res.json忽略的资源"
				},
				"egret-helper.resMap": {
					"type": "object",
					"default": {
						".png": {
							"tail": "_png",
							"type": "image"
						},
						".mp3": {
							"tail": "_mp3",
							"type": "sound"
						},
						".jpg": {
							"tail": "_jpg",
							"type": "image"
						},
						".jpeg": {
							"tail": "_jpg",
							"type": "image"
						},
						".tmx": {
							"tail": "_tmx",
							"type": "text"
						},
						".json": {
							"tail": "_json",
							"type": "json"
						},
						".fnt": {
							"tail": "_fnt",
							"type": "font"
						},
						".dbbin": {
							"tail": "_dbbin",
							"type": "bin"
						},
						".ttf": {
							"tail": "_bin",
							"type": "bin"
						},
						".zip": {
							"tail": "_bin",
							"type": "bin"
						}
					},
					"description": "同步default.res.json的资源 对象的key值代表文件扩展名 tail属性：扩展名替换的尾巴(egret资源的名字) type：default.res.json中的type"
				},
				"egret-helper.openEgretServer": {
					"type": "string",
					"default": "auto",
					"enum": [
						"auto",
						"alert"
					],
					"enumDescriptions": [
						"打开Egret项目时，自动开启Egret服务器",
						"打开Egret项目时，弹框询问是否开启Egret服务器"
					],
					"description": "打开项目时怎么开启Egret服务器"
				},
				"egret-helper.hostType": {
					"type": "string",
					"default": "127.0.0.1",
					"enum": [
						"127.0.0.1",
						"ip"
					],
					"enumDescriptions": [
						"Egret服务器使用 127.0.0.1:端口号 格式",
						"Egret服务器使用 ip:端口号 格式"
					],
					"description": "Egret服务器http地址的格式"
				},
				"egret-helper.debugBrowser": {
					"type": "string",
					"description": "调试使用的浏览器",
					"default": "chrome",
					"enum": [
						"chrome",
						"edge"
					],
					"enumDescriptions": [
						"Google Chrome浏览器",
						"Microsoft Edge浏览器"
					]
				},
				"egret-helper.port": {
					"type": "number",
					"description": "Egret服务器首选端口",
					"default": 7000
				},
				"egret-helper.egretCompileType": {
					"type": "string",
					"description": "Egret的编译代码方式",
					"default": "auto",
					"enum": [
						"auto",
						"legacy",
						"webpack"
					],
					"enumDescriptions": [
						"根据项目下scripts/config.ts文件中是否含有WebpackBundlePlugin判断(build命令中)，如果这种判断有问题可以手动选择其他的编译方式",
						"传统编译模式(适用版本一般在5.3.6以下)",
						"webpack编译(适用版本一般在5.3.6和5.3.6以上)"
					]
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "egretProject",
					"title": "Egret Launcher",
					"icon": "images/icon.svg"
				}
			]
		},
		"views": {
			"egretProject": [
				{
					"id": "egretProject",
					"name": "",
					"icon": "images/icon.svg",
					"contextualTitle": "Egret Project"
				}
			]
		},
		"keybindings": [
			{
				"command": "egret-helper.goToExml",
				"key": "Alt+F1",
				"mac": "Alt+F1",
				"when": "editorTextFocus"
			},
			{
				"command": "egret-helper.egretBuildAndDebug",
				"key": "Ctrl+F5",
				"mac": "Ctrl+F5",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/jju": "^1.4.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.12.0",
		"@types/semver": "^7.3.4",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^4.0.2",
		"vsce": "^1.87.1"
	},
	"dependencies": {
		"jju": "^1.4.0",
		"tree-kill": "^1.2.2"
	}
}
